@using MovieProject.ViewModels
@model GenreViewModel

<div class="card shadow border-0 mt-4 w-75 p-3 mx-auto">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="py-2">Delete Genre</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post">
			<input asp-for="GenreId" />
			<div class="border p-3 mt-4">
				<div class="mb-3 row p-1">
					<label asp-for="Name"></label>
					<input asp-for="Name" disabled type="text" class="form-control" style=" cursor:not-allowed">
				</div>

				<div class="row">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-primary form-control">Delete</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Genre" asp-action="Index" class="btn btn-outline-secondary border form-control">Back to List</a>
					</div>
				</div>
			</div>

		</form>
	</div>
</div>

