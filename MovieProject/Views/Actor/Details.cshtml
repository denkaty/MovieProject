@using MovieProject.ViewModels
@model ActorViewModel

<h1 style="text-align:center">@Model.FirstName @Model.LastName</h1>
<table class="table table-hover">
	<thead>
		<tr>
			<th scope="col">Movie</th>
			<th scope="col">Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var movieActor in Model.MoviesActors)
		{
			<tr>
			<td>@movieActor.Movie.Title</td>
			<td>
				<a asp-controller="Actor" asp-action="Edit" asp-route-id="@Model.ActorId" class="btn btn-warning mx-1">Edit</a>
				<a asp-controller="Actor" asp-action="Delete" asp-route-id="@Model.ActorId" class="btn btn-danger mx-1">Delete</a>
			</td>
		</tr>
		}
	</tbody>
</table>