@{
	ViewData["Title"] = "Create New Role";
}
@using MovieProject.ViewModels
@model MovieActorViewModel


	<div class="card shadow border-0 mt-4 w-75 p-3 mx-auto">
		<div class="card-header bg-secondary bg-gradient ml-0 py-3">
			<div class="row">
				<div class="col-12 text-center">
					<h2 class="py-2">@Model.Actor.FirstName @Model.Actor.LastName</h2>
					<h2 class="py-2">Create New Role</h2>
				</div>
			</div>
		</div>
		<div class="card-body p-4">
			<form method="post" class="row">
				<div class="border p-3">
					<div asp-validation-summary="All"></div>
					<div class="mb-3 row p-1">
						<label asp-for="Movie.Title">Movie Title</label>
						<select asp-for="Movie.Title" class="form-control">
							<option value="">Select a movie</option>
							@foreach (var movie in ViewBag.ExistingMovies)
							{
								<option value="@movie.Title">@movie.Title</option>
							}
						</select>
					<span asp-validation-for="Movie.Title" class="text-danger"></span>
				</div>

				<div class="row">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-primary form-control">Create</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Actor" asp-action="Index" class="btn btn-outline-secondary border form-control">Back to List</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>